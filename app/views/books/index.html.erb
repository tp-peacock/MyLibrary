<% @page_title = "Books List" %>

<%= link_to("Home", {:controller => 'home', :action => 'index'}) %>


<h2>Books List</h2>

<font color="red"><strong>
<% if flash[:notice] %>
	<p align="center">
	  <%= flash[:notice] %>
	</p>
<% end %>
</strong></font>

<%= form_for(:book, :url => {:action => 'create'}) do |f| %>
		<%= render(:partial => "form", :locals => {:f => f}) %>
		<div class="form-buttons">
			<%= submit_tag("Add Book") %>
		</div><br />
<% end %>

<div class"book-table">
	<table style="width:50%" align="center">
		<tr>
			<th align="left"><%= link_to(sortable "position") %></th>
			<th align="left"><%= link_to(sortable "title") %></th>
			<th align="left"><%= link_to(sortable "author") %></th>
			<th colspan='2'>Format</th>
			<th>Read</th>
			<th colspan='2'>&nbsp;</th>
		</tr>
		<tr>
			<th colspan='3'>&nbsp;</th>
			<th>Physical</th>
			<th>E-Book</th>
			<th colspan='3'>&nbsp;</th>
		</tr>
			
		<% @books.each do |book| %>
			<tr>
				<td><%= book.position %></td>
				<td><%= book.title %></td>
				<td><%= book.author %></td>
				<td align="center"><%= book.physical ? "\u2713" : "\u25A2" %></td>
				<td align="center"><%= book.ebook ? "\u2713" : "\u25A2" %></td>
				<td align="center"><%= book.read ?  "\u2713" : "\u25A2" %></td>
				<td align="center"><%= link_to("Edit", {:action => 'edit', :id => book.id}) %>
				<td align="center"><%= link_to("Delete", {:action => 'destroy', :id => book.id}) %>
			</tr>
		<% end %>
	</div>
</table>

