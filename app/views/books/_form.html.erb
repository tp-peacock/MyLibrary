<table style="width:80%" align="center" class="table table-condensed">
	<thead>
		<tr>
			<th>Title</th>
			<th>Author</th>
			<th class="text-center">Physical</th>
			<th class="text-center">E-Book</th>
			<th class="text-center">Read</th>
			<th>&nbsp;</th>
		</tr>
	</thead>
	<tbody>	
		<tr>
			<td><%= f.text_field(:title) %></td>
			<td><%= f.text_field(:author) %></td>
			<td class="text-center"><%= f.check_box(:physical) %></td>
			<td class="text-center"><%= f.check_box(:ebook) %></td>
			<td class="text-center"><%= f.check_box(:read) %></td>
			<td>
				<button type="submit" class= "btn btn-default btn-xs">
					<% if action_name == 'index' %> 
						Add Book
					<% elsif action_name == 'edit' %>
						Edit Book
					<% else %>
						Save
					<% end %>	
				</button>
			</td>
		</tr>
	</tbody>	
</table>