<!DOCTYPE html>
<html>
<head>
  <% provide(:title, 'Edit User') %>
</head>
<body>

<h1>Update your profile</h1>

<br>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <% if @user.picture? %>
      <%= image_tag @user.picture %>
    <% else %>
      <%= gravatar_for @user %>
      <a href="http://gravatar.com/emails" target="_blank">Change Gravatar Image</a>
    <% end %>
  </div>
</div>
<br>

<%= bootstrap_form_for(@user, html: { multipart: true }) do |f| %>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <span class = "picture">
      <%= f.file_field :picture, hide_label: true, accept: 'image/jpeg,image/gif,image/png' %>
    </span>
  </div>
</div>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
      <%= f.text_field :name %>
  </div>
</div>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
      <%= f.email_field :email %>
  </div>
</div>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
      <%= f.password_field :password %>
  </div>
</div>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
      <%= f.password_field :password_confirmation, label: "Confirm Password" %>
 </div>
</div>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
      
      <%= f.submit "Save changes", class: "btn btn-primary" %>
   
  </div>
</div>
<% end %>

<script type="text/javascript">
  $('#user_picture').bind('change', function() {
    var size_in_megabytes = this.files[0].size/1024/1024;
    if (size_in_megabytes > 5) {
      alert('Maximum file size is 5MB. Please choose a smaller file.');
    }
  });
</script>

</body>
</html>